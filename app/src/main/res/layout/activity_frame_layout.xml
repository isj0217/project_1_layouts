<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7E600">

    <ImageView
        android:id="@+id/kakaoBank_logo"
        android:layout_width="197dp"
        android:layout_height="185dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/kakaobank_logo_transparent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/description"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/fingerprint" />

    <TextView
        android:id="@+id/description"
        app:layout_constraintBottom_toTopOf="@id/btn_patternLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인을 위해\n 지문으로 인증해주세요"
        android:gravity="center_horizontal" />



    <Button
        android:id="@+id/btn_patternLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="패턴으로 로그인하기"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp" />








